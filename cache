#!/usr/bin/env bash
set -eu

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

. "$DIR/common-setup.sh"

for x in $(eval "echo $(nix-instantiate $NIXOPTS --eval -E 'let this = (import ./. {}); in this.nixpkgs.stdenv.lib.concatStringsSep " " this.cacheTargetSystems')") ; do
  nix-copy-closure --gzip --to "$1" $(nix-build $NIXOPTS -j 8 --no-out-link -E "import ./shell.nix { system = \"$x\"; }")
done
